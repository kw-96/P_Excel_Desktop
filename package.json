{
  "name": "p-excel-desktop",
  "version": "1.0.0",
  "description": "P_Excel桌面版 - 基于Electron的大文件Excel/CSV批量处理工具",
  "main": "src/main/app.js",
  "homepage": "https://github.com/kw-96/P_Excel_Desktop",
  "author": {
    "name": "kw-96",
    "email": ""
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac", 
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rimraf dist/ build/",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "excel",
    "csv", 
    "data-processing",
    "electron",
    "desktop-app",
    "batch-processing",
    "大文件处理",
    "数据处理"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "apache-arrow": "^14.0.2",
    "duckdb": "^0.9.2",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.p-excel.desktop",
    "productName": "P_Excel桌面版",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "libs/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable", 
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    }
  }
}